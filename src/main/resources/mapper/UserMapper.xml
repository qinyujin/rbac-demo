<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.boss.rbacdemo.dao.UserDao">
    <insert id="saveUser" parameterType="com.boss.rbacdemo.entity.User">
        insert into user (num,name,password,role) values (#{num},#{name},#{password},#{role});
    </insert>

    <select id="getUserByNum" resultType="com.boss.rbacdemo.entity.User">
        select * from user where num=#{num};
    </select>

    <select id="getUsers" resultType="com.boss.rbacdemo.entity.User">
        select * from user;
    </select>

    <delete id="deleteUserByNum" parameterType="Integer">
        delete from user  where num=#{num}
    </delete>

    <update id="updateUserName" parameterType="com.boss.rbacdemo.entity.User">
        update user set name = #{name} where num=#{num};
    </update>

    <update id="updateUserRole" parameterType="com.boss.rbacdemo.entity.User">
        update user set role=#{role} where num=#{num};
    </update>
</mapper>